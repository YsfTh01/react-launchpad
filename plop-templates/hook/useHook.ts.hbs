import { useState, useCallback } from 'react'

export function use{{pascalCase name}}() {
  const [state, setState] = useState<unknown>(null)

  const update = useCallback((value: unknown) => {
    setState(value)
  }, [])

  const reset = useCallback(() => {
    setState(null)
  }, [])

  return {
    state,
    update,
    reset,
  }
}
